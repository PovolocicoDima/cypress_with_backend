{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint"],
    "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
    "rules": {
        "@typescript-eslint/no-namespace": "off",
        "max-len": [
            "error",
            {
                "code": 80,
                "ignoreUrls": true,
                "ignoreComments": true,
                "ignoreTemplateLiterals": true
            }
        ]
    },
    "env": {
        "browser": true,
        "es2021": true
    }
}
